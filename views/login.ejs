<body>
    <div class="container">
        <div class="login">
            <form action="" >
            <h2>Welcome User! </h2>
            <p class="sub-head">Traveling Kuy</p>
            <hr>
            <P>Use your credentials below and login
                to your account</P>
                <div class="form-group">
                    <label for="username"></label>
                    <input type="text" id="username" name="username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <label for="password"></label>
                    <input type="password" id="password" name="password" placeholder="Password" required>
                </div>
                <button type="submit" formaction="index/login" onclick="kirimData()">Login</button>
                <div class="action-more">  <p><a href="#">Forgot Password</a></p></div>
              

            </form>    
           
        </div>
        <div class="img-right">
            <img src="../img/login.jpg" alt="">
        </div>

        <script>
            function kirimData() {
                const username = document.getElementById('username').value;
                const password = document.getElementById('password').value;

                // Tambahkan field lain sesuai kebutuhan

                const data = { username, password };

                // Kirim data ke server menggunakan Fetch API
                fetch('/api/users/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                })
                    .then(response => response.json())
                    .then(result => {
                        console.log('Respon dari server:', result);
                        // Handle respon dari server sesuai kebutuhan
                    })
                    .catch(error => {
                        console.error('Gagal mengirim data:', error);
                        // Handle kesalahan sesuai kebutuhan
                    });
            }
        </script>
    

    </div>
